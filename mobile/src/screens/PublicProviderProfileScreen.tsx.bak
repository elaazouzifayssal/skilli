import React from 'react';
import {
  View,
  Text,
  StyleSheet,
  ScrollView,
  ActivityIndicator,
  TouchableOpacity,
  Image,
} from 'react-native';
import { useRoute, useNavigation } from '@react-navigation/native';
import { Ionicons } from '@expo/vector-icons';
import { useProviderProfileQuery } from '../services/providerProfiles';
import { getImageUrl } from '../utils/imageUtils';

/**
 * PublicProviderProfileScreen
 *
 * Displays a public view of a provider's profile.
 * Can be accessed from:
 * - ProvidersListScreen (browsing providers)
 * - Feed posts (tapping on provider name/avatar)
 * - Any other place that links to a provider
 *
 * Navigation params:
 * - providerId: string (userId of the provider)
 */
export default function PublicProviderProfileScreen() {
  const route = useRoute<any>();
  const navigation = useNavigation<any>();
  const { providerId } = route.params;

  // Fetch provider profile data
  const { data: profile, isLoading, error } = useProviderProfileQuery(providerId);

  // Debug logging
  React.useEffect(() => {
    if (profile) {
      console.log('PublicProviderProfileScreen - Profile data:', JSON.stringify(profile, null, 2));
      console.log('Profile user:', profile.user);
      console.log('Profile experienceLevelNew:', profile.experienceLevelNew, typeof profile.experienceLevelNew);
      console.log('Profile cities:', profile.cities);
      console.log('Profile categories:', profile.categories);
      console.log('Profile skills:', profile.skills);
    }
  }, [profile]);

  if (isLoading) {
    return (
      <View style={styles.loadingContainer}>
        <ActivityIndicator size="large" color="#6366f1" />
        <Text style={styles.loadingText}>Chargement du profil...</Text>
      </View>
    );
  }

  if (error || !profile) {
    return (
      <View style={styles.errorContainer}>
        <Ionicons name="alert-circle-outline" size={64} color="#ef4444" />
        <Text style={styles.errorText}>Impossible de charger le profil</Text>
        <TouchableOpacity style={styles.backButton} onPress={() => navigation.goBack()}>
          <Text style={styles.backButtonText}>Retour</Text>
        </TouchableOpacity>
      </View>
    );
  }

  const userName = String(profile.user?.name || 'Provider');
  const userPhoto = profile.photo || profile.user?.profile?.photo;
  const imageUri = getImageUrl(userPhoto);
  const hasImage = imageUri !== null && imageUri !== undefined && typeof imageUri === 'string';

  // Add defensive checks for all data
  console.log('About to render - checking all values:');
  console.log('userName:', userName, typeof userName);
  console.log('imageUri:', imageUri, typeof imageUri);
  console.log('hasImage:', hasImage);
  console.log('experienceLevelNew:', profile.experienceLevelNew, typeof profile.experienceLevelNew);
  console.log('experienceLevel:', profile.experienceLevel, typeof profile.experienceLevel);
  console.log('rating:', profile.rating, typeof profile.rating);

  return (
    <ScrollView style={styles.container}>
      {/* Header */}
      <View style={styles.header}>
        <TouchableOpacity style={styles.backBtn} onPress={() => navigation.goBack()}>
          <Ionicons name="arrow-back" size={24} color="#333" />
        </TouchableOpacity>
        <Text style={styles.headerTitle}>Profil Provider</Text>
        <View style={styles.headerSpacer} />
      </View>

      {/* Profile Card */}
      <View style={styles.profileCard}>
        {hasImage ? (
          <Image source={{ uri: imageUri! }} style={styles.avatar} />
        ) : (
          <View style={[styles.avatar, styles.avatarPlaceholder]}>
            <Text style={styles.avatarText}>{String(userName).charAt(0).toUpperCase()}</Text>
          </View>
        )}

        <Text style={styles.name}>{String(userName)}</Text>

        {(profile.experienceLevelNew || profile.experienceLevel) && (
          <Text style={styles.experienceLevel}>
            {String(profile.experienceLevelNew || profile.experienceLevel || '').replace(/_/g, ' ')}
          </Text>
        )}

        {/* Rating */}
        {profile.rating && profile.rating > 0 && (
          <View style={styles.ratingContainer}>
            <Ionicons name="star" size={20} color="#f59e0b" style={{ marginRight: 6 }} />
            <Text style={styles.ratingText}>
              {String(profile.rating.toFixed(1))} ({String(profile.totalRatings || 0)} avis)
            </Text>
          </View>
        )}

        {/* Profile Status Badge */}
        {profile.profileStatus === 'APPROVED' && (
          <View style={styles.verifiedBadge}>
            <Ionicons name="checkmark-circle" size={16} color="#10b981" style={{ marginRight: 6 }} />
            <Text style={styles.verifiedText}>Profil vérifié</Text>
          </View>
        )}
      </View>

      {/* Teaching Format & Cities */}
      {(profile.teachingFormatNew || profile.teachingFormat) && (
        <View style={styles.section}>
          <Text style={styles.sectionTitle}>Format d'enseignement</Text>
          <View style={styles.tagContainer}>
            <View style={styles.tag}>
              <Ionicons
                name={
                  (profile.teachingFormatNew === 'ONLINE' || profile.teachingFormat === 'online')
                    ? 'laptop-outline'
                    : (profile.teachingFormatNew === 'IN_PERSON' || profile.teachingFormat === 'presential')
                    ? 'location-outline'
                    : 'globe-outline'
                }
                size={16}
                color="#6366f1"
              />
              <Text style={styles.tagText}>
                {(profile.teachingFormatNew === 'ONLINE' || profile.teachingFormat === 'online')
                  ? 'En ligne'
                  : (profile.teachingFormatNew === 'IN_PERSON' || profile.teachingFormat === 'presential')
                  ? 'Présentiel'
                  : 'Les deux'}
              </Text>
            </View>
          </View>
        </View>
      )}

      {/* Cities */}
      {((profile.cities && Array.isArray(profile.cities) && profile.cities.length > 0) || profile.city) && (
        <View style={styles.section}>
          <Text style={styles.sectionTitle}>Villes</Text>
          <View style={styles.tagContainer}>
            {profile.cities && Array.isArray(profile.cities) && profile.cities.length > 0 ? (
              profile.cities.map((city, index) => (
                <View key={index} style={styles.tag}>
                  <Ionicons name="location" size={16} color="#6366f1" />
                  <Text style={styles.tagText}>{String(city)}</Text>
                </View>
              ))
            ) : profile.city ? (
              <View style={styles.tag}>
                <Ionicons name="location" size={16} color="#6366f1" />
                <Text style={styles.tagText}>{String(profile.city)}</Text>
              </View>
            ) : null}
          </View>
        </View>
      )}

      {/* Bio */}
      {profile.bio && (
        <View style={styles.section}>
          <Text style={styles.sectionTitle}>À propos</Text>
          <Text style={styles.bioText}>{String(profile.bio)}</Text>
        </View>
      )}

      {/* Categories */}
      {profile.categories && Array.isArray(profile.categories) && profile.categories.length > 0 && (
        <View style={styles.section}>
          <Text style={styles.sectionTitle}>Catégories</Text>
          <View style={styles.chipContainer}>
            {profile.categories.map((category, index) => (
              <View key={index} style={styles.chip}>
                <Text style={styles.chipText}>{String(category)}</Text>
              </View>
            ))}
          </View>
        </View>
      )}

      {/* Skills */}
      {profile.skills && Array.isArray(profile.skills) && profile.skills.length > 0 && (
        <View style={styles.section}>
          <Text style={styles.sectionTitle}>Compétences</Text>
          <View style={styles.chipContainer}>
            {profile.skills.map((skill, index) => (
              <View key={index} style={[styles.chip, styles.skillChip]}>
                <Text style={styles.chipText}>{String(skill)}</Text>
              </View>
            ))}
          </View>
        </View>
      )}

      {/* Pricing */}
      {(profile.hourlyRateType || profile.pricingTier || profile.hourlyRate) && (
        <View style={styles.section}>
          <Text style={styles.sectionTitle}>Tarification</Text>
          <View style={styles.pricingCard}>
            <Ionicons name="cash-outline" size={24} color="#10b981" />
            <View style={styles.pricingInfo}>
              <Text style={styles.pricingType}>
                {profile.hourlyRateType === 'BASIC' || profile.pricingTier === 'basic'
                  ? 'Basique (50-100 MAD/h)'
                  : profile.hourlyRateType === 'STANDARD' || profile.pricingTier === 'standard'
                  ? 'Standard (100-200 MAD/h)'
                  : profile.hourlyRateType === 'PREMIUM' || profile.pricingTier === 'premium'
                  ? 'Premium (200-500 MAD/h)'
                  : 'Tarif personnalisé'}
              </Text>
              {profile.hourlyRateMin && profile.hourlyRateMax ? (
                <Text style={styles.pricingRange}>
                  {String(profile.hourlyRateMin)} - {String(profile.hourlyRateMax)} MAD/h
                </Text>
              ) : profile.hourlyRate ? (
                <Text style={styles.pricingRange}>
                  {String(profile.hourlyRate)} MAD/h
                </Text>
              ) : null}
            </View>
          </View>
        </View>
      )}

      {/* Verification Status */}
      <View style={styles.section}>
        <Text style={styles.sectionTitle}>Vérifications</Text>
        <View style={styles.verificationList}>
          <View style={styles.verificationItem}>
            <Ionicons
              name={profile.isEmailVerified ? 'checkmark-circle' : 'close-circle'}
              size={20}
              color={profile.isEmailVerified ? '#10b981' : '#9ca3af'}
            />
            <Text style={styles.verificationText}>Email vérifié</Text>
          </View>
          <View style={styles.verificationItem}>
            <Ionicons
              name={profile.isPhoneVerified ? 'checkmark-circle' : 'close-circle'}
              size={20}
              color={profile.isPhoneVerified ? '#10b981' : '#9ca3af'}
            />
            <Text style={styles.verificationText}>Téléphone vérifié</Text>
          </View>
        </View>
      </View>

      {/* Contact Button */}
      <TouchableOpacity
        style={styles.contactButton}
        onPress={() => {
          // TODO: Navigate to chat or contact flow
          console.log('Contact provider:', providerId);
        }}
      >
        <Ionicons name="chatbubble-outline" size={20} color="#fff" />
        <Text style={styles.contactButtonText}>Contacter</Text>
      </TouchableOpacity>

      <View style={{ height: 40 }} />
    </ScrollView>
  );
}

